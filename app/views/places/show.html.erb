<h1><%= @place["name"] %></h1>

<p><a href="/places">Back to places</a></p>

<% if @entries.length > 0 %>
  <ul>
    <% for entry in @entries %>
      <li>
        <strong><%= entry["title"] %></strong>
        <p><em><%= entry["occurred_on"] %></em></p>
        <p><%= entry["description"] %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet. Add one!</p>
<% end %>

<p><a href="/places/<%= @place["id"] %>/entries/new">Add a new entry</a></p>
